/**app.wxss**/

.container {
  box-sizing: border-box;
  background: #f0f0f0;
}

video {
  width: 100%;
}

.card {
  margin: 10px 0;
  padding: 20rpx;
  background: #fff;
}

.card .card-hd {
  display: -webkit-box;
  display: -ms-flex-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -ms-flex-pack: justify;
  -webkit-justify-content: space-between;
  justify-content: space-between;
  -webkit-box-align: center;
  -ms-flex-align: center;
  -webkit-align-items: center;
  align-items: center;
  box-sizing: border-box;
  font-size: 36rpx;
}

.card .card-hd .more {
  color: #333;
  font-size: 26rpx;
}

.card .card-bd {
  margin-top: 10px;
  font-size: 26rpx;
  line-height: 1.8;
}

.text-ellipsis {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.loading {
  position: absolute;
  left: 50%;
  top: 50%;
  -wekit-transform: translate(-50%, -50%) scale(.8);
  transform: translate(-50%, -50%) scale(.8);
}

.loading-icon {
  position: relative;
  width: 80rpx;
  height: 80rpx;
  border: 5rpx solid #ea6f5a;
  border-radius: 50%;
  box-sizing: border-box;
  opacity: 0.8;
  -webkit-animation: rotate 2s linear 0s infinite;
  animation: rotate 2s linear 0s infinite;
}

.loading-icon::after {
  position: absolute;
  left: 50%;
  top: 50%;
  width: 5rpx;
  height: 5rpx;
  content: '';
  border: 2rpx solid #ea6f5a;
  border-radius: 50%;
  -wekit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
}

.loading-icon .circle {
  position: absolute;
  width: 10rpx;
  height: 10rpx;
  border: 5rpx solid #ea6f5a;
  border-radius: 50%;
}

.loading-icon .circle:nth-child(1) {
  left: 50%;
  top: 8%;
  -wekit-transform: translateX(-50%);
  transform: translateX(-50%);
}

.loading-icon .circle:nth-child(2) {
  left: 50%;
  bottom: 8%;
  -wekit-transform: translateX(-50%);
  transform: translateX(-50%);
}

.loading-icon .circle:nth-child(3) {
  left: 8%;
  top: 50%;
  -wekit-transform: translateY(-50%);
  transform: translateY(-50%);
}

.loading-icon .circle:nth-child(4) {
  right: 8%;
  top: 50%;
  -wekit-transform: translateY(-50%);
  transform: translateY(-50%);
}

@-webkit-keyframes rotate {
  0% {
    -wekbit-transform: rotate(0deg);
  }
  100% {
    -wekbit-transform: rotate(360deg);
  }
}
@keyframes rotate {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

