.loading {
  position: absolute;
  left: 50%;
  top: 50%;
  -wekit-transform: translate(-50%, -50%) scale(.8);
  transform: translate(-50%, -50%) scale(.8);
}

.loading-icon {
  position: relative;
  width: 80rpx;
  height: 80rpx;
  border: 5rpx solid #ea6f5a;
  border-radius: 50%;
  box-sizing: border-box;
  opacity: 0.8;
  -webkit-animation: rotate 2s linear 0s infinite;
  animation: rotate 2s linear 0s infinite;
}

.loading-icon::after {
  position: absolute;
  left: 50%;
  top: 50%;
  width: 5rpx;
  height: 5rpx;
  content: '';
  border: 2rpx solid #ea6f5a;
  border-radius: 50%;
  -wekit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
}

.loading-icon .circle {
  position: absolute;
  width: 10rpx;
  height: 10rpx;
  border: 5rpx solid #ea6f5a;
  border-radius: 50%;
}

.loading-icon .circle:nth-child(1) {
  left: 50%;
  top: 8%;
  -wekit-transform: translateX(-50%);
  transform: translateX(-50%);
}

.loading-icon .circle:nth-child(2) {
  left: 50%;
  bottom: 8%;
  -wekit-transform: translateX(-50%);
  transform: translateX(-50%);
}

.loading-icon .circle:nth-child(3) {
  left: 8%;
  top: 50%;
  -wekit-transform: translateY(-50%);
  transform: translateY(-50%);
}

.loading-icon .circle:nth-child(4) {
  right: 8%;
  top: 50%;
  -wekit-transform: translateY(-50%);
  transform: translateY(-50%);
}

@-webkit-keyframes rotate {
  0% {
    -wekbit-transform: rotate(0deg);
  }
  100% {
    -wekbit-transform: rotate(360deg);
  }
}
@keyframes rotate {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.data-blank {
  padding: 20rpx 0;
  color: #aaa;
  font-size: 30rpx;
  text-align: center;
}

.data-blank image {
  width: 80rpx;
  height: 80rpx;
  margin-top: 60rpx;
  margin-bottom: 20rpx;
}